@model IEnumerable<WebMailer.Models.Location>

@{
    ViewBag.Title = "Locations";
}
@Html.Action("_adminMenu", "Home")
<article class="main-container">
    <div class="secondary-container">
        <h2>Locations</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LocationName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationName)
                    </td>
                    <td class="link-icon">
                        @Html.ActionLink(" ", "DeleteConfirmed", "Location", new { id = item.LocationID }, new { @class = "icon-bin" })
                    </td>
                </tr>
            }
        </table>
    </div>
</article>

@section Scripts{
    <link rel="stylesheet" href="@Url.Content("~/Sources/css/Navbar.css")" />
}
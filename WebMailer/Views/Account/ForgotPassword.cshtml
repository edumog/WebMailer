@model WebMailer.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "¿Olvido su contraseña?";
}

<article class="main-container">
    <hgroup class="hgroupA">
        <h1>@ViewBag.Title</h1>
        <h2>Ingrese su dirección de correo electrónico</h2>
    </hgroup>
    <section class="form-container">
       
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div>
                <span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "txt", placeholder = "Correo electrónico", id = "Mail", maxlength = "50", type = "email", required = "required" })
                </span>
            </div>
            <button type="submit" class="btn btn-success btn-outline-light btn-lg">Registrar</button>
        }
    </section>
</article>


@model WebMailer.Models.RegisterViewModel

@{
    ViewBag.Title = "Registro";
}

@Html.Action("_adminMenu", "Home")
<article class="main-container">
    <hgroup class="hgroupA">
        <h1>@ViewBag.Title.</h1>
        <h2>Registre un usuario nuevo.</h2>
    </hgroup>
    <section class="secondary-container form-container">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div>
                <span>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "txt", placeholder = "Nombre de usuario", id = "usr", maxlength = "50", required = "required" })
                </span>
            </div>

            <div>
                <span>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "txt", placeholder = "Nombre", id = "Nusr", maxlength = "50", required = "required" })
                </span>
            </div>

            <div>
                <span>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "txt", placeholder = "Apellido", id = "Lnusr", maxlength = "50", required = "required" })
                </span>
            </div>

            <div>
                <span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "txt", placeholder = "Correo electrónico", id = "Mail", maxlength = "50", required = "required", type = "email" })
                </span>
            </div>
            <button type="submit" class="btn btn-success btn-outline-light btn-lg">Registrar</button>
        }
    </section>
</article>

@section Scripts
{
    <script src="~/Sources/Scripts/Register.js"></script>
    <link rel="stylesheet" href="@Url.Content("~/Sources/css/Navbar.css")" />
}
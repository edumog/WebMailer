
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="@Url.Content("~/Sources/Icons/style.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Sources/css/Theme.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Sources/css/Banner.css")" />
    @*<link rel="stylesheet" href="@Url.Content("~/Sources/css/Navbar.css")" />*@
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script defer src="@Url.Content("~/Sources/Scripts/jquery.unobtrusive-ajax.js")"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script defer src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    @RenderSection("Scripts", false)
    <title>@ViewBag.Title</title>
</head>
<body>
    <header class="banner">
        @if(HttpContext.Current.User.Identity.IsAuthenticated)
        {
            <ul>
                <li>
                    <a href="~/Account/LogOff" title="Cerrar sesión"><span class="logoff"></span></a>
                </li>
                <li>
                    <a href="~/Actualizar_información" title="Actualizar información"><span class="registered-users"></span></a>
                    <span>@HttpContext.Current.User.Identity.Name</span>
                </li>
            </ul>
            <section>
                <a href="http://www.lourtec.com"><img src="~/img/logo-lourtec.png" width="254" /></a>
                <a href="~/Home/Index"><img src="~/img/WebMailerIcon.png" width="254" /></a>
            </section>
        }
        else
        {
            <section>
                <a href="http://www.lourtec.com"><img src="~/img/logo-lourtec.png" width="254" /></a>
                <a href="~/Home/Index"><img src="~/img/WebMailerIcon.png" width="254" /></a>
            </section>
        }
    </header> 
    <div> 
        @RenderBody()
    </div>
    <footer class="footer">
        <span>2019</span>
    </footer>
</body>
</html>

@model IEnumerable<WebMailer.Models.Location>

@{
    ViewBag.Title = "assignment";
}
@Html.Action("_adminMenu", "Home")

<article class="main-container">
    <div class="secondary-container">
        <h2>Sedes asignadas al usuario @ViewBag.userName</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LocationName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationName)
                    </td>
                    <td>
                        @Html.ActionLink("Retirar de esta sede", "RevokeLocation", "UserLocation", new { loc = item.LocationID }, new { })
                    </td>
                </tr>
            }
        </table>
        <div id="UsrLoc">
            @Html.Action("_UserLocations", "UserLocation")
        </div>
    </div>
</article>

@section Scripts
{
    <link rel="stylesheet" href="@Url.Content("~/Sources/css/Navbar.css")" />
}
